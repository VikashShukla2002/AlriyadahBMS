@using AlriyadahBMS.Shared.ViewModels
@using AlriyadahBMS.Services
@inject LocalizationService Language
@inject NavigationManager NavigationManager

@{
    DrivingLicense type = (DrivingLicense)(StudentData?.intDrivinglicenseType ?? 0);
}

<MudDialog Class="overflow-y-scroll">
    <DialogContent>
        <MudIconButton Icon="@Icons.Material.Filled.Edit" OnClick="GotoEdit" Variant="Variant.Outlined" Color="Color.Primary" Size="Size.Medium" />

        <MudTabs Elevation="2" Rounded="true" ApplyEffectsToContainer="true" PanelClass="pa-6">
            <MudTabPanel Text="@Language.Phrase("tblstudents","tblpagecaption1")">
                <MudText>
                    <table class="table table-bordered table-hover ew-view-table">
                        <tbody>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "str_full_name", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.str_Full_Name
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"> <strong> @Language.Phrase("tblstudents", "str_cell_phone", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.str_Cell_Phone
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "str_email", "fldcaption")</strong> </td>
                                <td>
                                    <span>
                                        @StudentData?.str_Email
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "int_nationality", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.int_Nationality
                                    </span>
                                </td>
                            </tr>
                            <tr id="r_User_Role">
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "user_role", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.User_Role
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblcrsessions", "int_staff_id", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.int_Staff_Id
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </MudText>
            </MudTabPanel>
            <MudTabPanel Text="@Language.Phrase("tblstudents","tblpagecaption2")">
                <MudText>
                    <table class="table table-bordered table-hover ew-view-table">
                        <tbody>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("username")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.str_Username
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"> <strong>@Language.Phrase("tblstudents", "date_birth_hijri", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.date_Birth_Hijri
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "date_birth", "fldcaption")</strong> </td>
                                <td>
                                    <span>
                                        @if (StudentData?.date_Birth.HasValue == true)
                                        {
                                            <text>@StudentData.date_Birth.Value.ToString("MM/dd/yyyy HH:mm:ss")</text>
                                        }

                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "str_nationalid_iqama", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.str_NationalID_Iqama
                                    </span>
                                </td>
                            </tr>
                            <tr id="r_User_Role">
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "parent_username", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.Parent_Username
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </MudText>
            </MudTabPanel>
            <MudTabPanel Text="@Language.Phrase("tblstudents","tblpagecaption3")">
                <MudText>
                    <table class="table table-bordered table-hover ew-view-table">
                        <tbody>
                            <tr>
                                <td class="w-col-2"><strong>Institution</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.Institution
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"> <strong>@Language.Phrase("tblstudents", "isdrivingexperience", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @if (StudentData?.IsDrivingexperience ?? false)
                                        {
                                            <text>Yes</text>
                                        }
                                        else
                                        {
                                            <text>No</text>
                                        }
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "intdrivinglicensetype", "fldcaption")</strong> </td>
                                <td>
                                    <span>
                                        @if (type != 0)
                                        {
                                            <span>@type.ToDescriptionString()</span>
                                        }
                                    </span>
                                </td>
                            </tr>
                            <tr>
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "absherapptnbr", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.AbsherApptNbr
                                    </span>
                                </td>
                            </tr>
                            <tr id="r_User_Role">
                                <td class="w-col-2"><strong>@Language.Phrase("tblstudents", "absherphoto", "fldcaption")</strong></td>
                                <td>
                                    <span>
                                        @StudentData?.Absherphoto
                                    </span>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                </MudText>
            </MudTabPanel>
        </MudTabs>

    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel" Color="Color.Primary">
        
            @Language.Phrase("cancelbtn")
            @* Cancel *@
            
        </MudButton>

        @* <MudButton OnClick="StudentDataEdit"> </MudButton> *@

    </DialogActions>
</MudDialog>



@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;

    [Parameter]
    public StudentRegistrationModel? StudentData { get; set; }

    // DialogOptions maxWidth = new DialogOptions() { MaxWidth = MaxWidth.Medium, FullWidth = true };



    private void GotoEdit()
    {
        NavigationManager.NavigateTo("/student-edit");
    }


    // void Submit() => MudDialog.Close(DialogResult.Ok(true));
    void Cancel() => MudDialog.Cancel();
}
