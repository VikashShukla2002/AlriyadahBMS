@page "/resetpass"
@using AlriyadahBMS.Services
@using AlriyadahBMS.Shared.ViewModels

@inject LocalizationService Language


<div class="container-fluid">
    @* <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;"> *@
    <div  style="min-height: 100vh;">

        <div class="col-md-6 col-lg-4">
            <MudPaper Class="pa-4  mt-4">

                <div class="d-flex align-center justify-center mb-4">
                    <MudImage Src="images/logo.png" Alt="Alriyadah" Class="rounded-lg" Height="100" />
                </div>

                <div class="text-center mb-4">
                    <h4>@Language.Phrase("resetpassword")</h4>
                </div>

                <div class="mb-4">
                    <MudTextField @bind-Value="resetPassModel.Email" For="@(() => resetPassModel.Email)" Label="@Language.Phrase("useremail")" Required="true" RequiredError="@Language.Phrase("requiredemailvalidation")" />
                </div>

                <div class="d-flex align-center justify-content-between">
                    <MudButton ButtonType="ButtonType.Submit" OnClick="OnValidSubmitAsync" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">@Language.Phrase("sendemailbtn")</MudButton>
                </div>

            </MudPaper>


                <NavLink Href="/login" Class="forgot-link d-flex align-center justify-center mt-4">@Language.Phrase("alreadyhaveuseraccount")</NavLink>
        </div>
    </div>
</div>

@code {
    public ResetPassModel resetPassModel { get; set; } = new();

    private async Task OnValidSubmitAsync()
    {
        
    }

}