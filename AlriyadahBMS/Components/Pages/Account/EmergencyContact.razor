@using AlriyadahBMS.Shared.ViewModels

<MudPaper Elevation="3" Class="pa-4">
    <MudTextField Label="Emergency Contact Name" @bind-Value="Model.str_Emergency_Contact_Name" />
    <MudTextField Label="Emergency Contact Phone" @bind-Value="Model.str_Emergency_Contact_Phone" Mask="@(new PatternMask("00 0000 0000"))" />

    <MudSelect T="string" Label="Emergency contact relation" AnchorOrigin="Origin.BottomCenter" @bind-Value="Model.str_Emergency_Contact_Relation">
        <MudSelectItem Value="@("Father")" />
        <MudSelectItem Value="@("Mother")" />
        <MudSelectItem Value="@("Brother")" />
        <MudSelectItem Value="@("Sister")" />
        <MudSelectItem Value="@("Uncle")" />
        <MudSelectItem Value="@("Aunt")" />
        <MudSelectItem Value="@("Friend")" />
    </MudSelect>
</MudPaper>

