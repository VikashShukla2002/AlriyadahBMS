    <MudTextField Label="@Language.Phrase("tblstudents", "str_cell_phone", "fldcaption")" @bind-Value="Model.str_Cell_Phone" Required="true" RequiredError="@Language.Phrase("cellPhoneRequired")" Mask="@(new PatternMask("00 0000 0000"))" />
    <MudTextField Label="@Language.Phrase("tblstudents", "str_email", "fldcaption")" @bind-Value="Model.str_Email" Required="true" RequiredError="@Language.Phrase("EmailRequiredMessage")" />
