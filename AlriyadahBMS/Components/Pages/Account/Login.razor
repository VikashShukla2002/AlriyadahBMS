@page "/login"
@using AlriyadahBMS.Services
@inject ISwaggerApiService Swagger
@inject IAccountService AccountService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthenticationStateProvider
@inject ISnackbar Snackbar
@inject LocalizationService Language





<EditForm Model="LoginModel" Context="Login" OnValidSubmit="OnValidSubmitAsync">

@* <MudForm @ref="form" Model="LoginModel"> *@

    

      <DataAnnotationsValidator />
    <div class="container-fluid">
        @* <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;"> *@
        <div  style="min-height: 100vh;">

            <div class="col-md-6 col-lg-4">


                <MudItem Class="pa-4">


                    <div class="d-flex align-center justify-center mb-4">
                        <MudImage Src="images/logo.png" Alt="Alriyadah" Class="rounded-lg" Height="100" />
                    </div>

                    <div class="text-center mb-4">
                        <h4>@Language.Phrase("loginmsg")</h4>
                    </div>

                    <div class="mb-4">
                        <MudTextField @bind-Value="LoginModel.UserName" For="@(() => LoginModel.UserName)" Label="@Language.Phrase("username")" Required="true" RequiredError="@Language.Phrase("usernamevalidation")" Immediate="true"/>
                    </div>

                    <div class="mb-4">
                        <MudTextField @bind-Value="LoginModel.Password" For="@(() => LoginModel.Password)" Label="@Language.Phrase("password")" InputType="@GetInputType()" Required="true" RequiredError="@Language.Phrase("userpasswordvalidation")" Immediate="true" />
                    </div>

                    <div class="mb-4">
                        <label>
                            <input type="checkbox" @bind="ShowPassword" /> @Language.Phrase("loginregistrationshowpassword")
                        </label>
                    </div>

                    <div class="d-flex align-center justify-content-between">
                        @* <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true" @onclick="OnValidSubmitAsync">@Language.Phrase("login")</MudButton> *@
                        <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">@Language.Phrase("login")</MudButton>
                    </div>

                    <div class="text-center mt-4">
                        <p>
                            <a href="/resetpass" class="forgot-link">@Language.Phrase("resetpwd")</a>
                        </p>
                        <NavLink Href="/register" Class="forgot-link">@Language.Phrase("registerSignup")</NavLink>
                    </div>
                </MudItem>
            </div>
        </div>
    </div>


</EditForm>

