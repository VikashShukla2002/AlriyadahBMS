@page "/login"
@inject ISwaggerApiService Swagger

<div class="container-fluid">
    <div class="d-flex justify-content-center align-items-center" style="min-height: 100vh;">

        <div class="col-md-6 col-lg-4">
            <MudPaper Class="pa-4">
               

                <div class="d-flex align-center justify-center mb-4">
                    <MudImage Src="images/logo.png" Alt="Alriyadah" Class="rounded-lg" Height="100" />
                </div>

                <div class="text-center mb-4">
                    <h4>Sign in to start your session</h4>
                </div>

                <div class="mb-4">
                    <MudTextField @bind-Value="LoginModel.UserName" For="@(() => LoginModel.UserName)" Label="User name" />
                </div>

                <div class="mb-4">
                    <MudTextField @bind-Value="LoginModel.Password" For="@(() => LoginModel.Password)" Label="Password" InputType="@GetInputType()" />
                </div>

                <div class="mb-4">
                    <label>
                        <input type="checkbox" @bind="ShowPassword" /> Show password
                    </label>
                </div>

                <div class="d-flex align-center justify-content-between">
                    <MudButton ButtonType="ButtonType.Submit" OnClick="OnValidSubmitAsync" Variant="Variant.Filled" Color="Color.Primary" FullWidth="true">Sign In</MudButton>
                </div>

                <div class="text-center mt-4">
                    <p>
                        <a href="/forgotpass" class="forgot-link">Forgot password</a>
                    </p>
                    <NavLink Href="/register" Class="forgot-link">Don't have an account? Sign Up</NavLink>
                </div>
            </MudPaper>
        </div>
    </div>
</div>




